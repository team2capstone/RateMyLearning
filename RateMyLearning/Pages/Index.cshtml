<!-- Reviews Content -->
<section class="py-5">
    <div class="container">
        <div class="col">
            <h2 class="text-center" style="font-family:'Agency FB'">Most recent reviews</h2>
        </div>
        <div class="card mt-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-10">
                        @foreach (var item in Model.ReviewData.Reviews)
                        {
                            <p>
                                <a class="float-left"><strong>@item.Program.Name</strong></a>
                                @{ string rating = "";
                                    for (var i = 0; i < 5; i++)
                                    {
                                        if (i < item.Rating)
                                        {
                                            if (item.Rating % 1 > 0)
                                            {
                                                rating += @"<span class='float-right'><i class='text-warning fa fa-star-half-o'></i></span>";
                                            }
                                            else
                                            {
                                                rating += @"<span class='float-right'><i class='text-warning fa fa-star checked'></i></span>";
                                            }
                                        }
                                    }
                                    @Html.Raw(rating);
                                    <br />
                                    <a class="float-left"><strong>@item.Course.Name</strong></a>
                                }
                            </p>
                            <div class="clearfix"></div>
                            <p>@item.Description</p>
                            @if (item.Users.TypeId == 1)
                            {
                                <p>Student<br />@item.CreatedOn.ToString("dd MMM yyyy")</p>
                            }
                            else if (item.Users.TypeId == 2)
                            {
                                <p>Faculty<br />@item.CreatedOn.ToString("dd MMM yyyy")</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

